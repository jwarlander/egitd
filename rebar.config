{erl_opts, [warnings_as_errors,
            warn_export_all,
            warn_unused_import,
            warn_untyped_record]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.

{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{validate_app_modules, true}.

{deps,
  [
   {getopt,
    ".*", {git, "git://github.com/jcomellas/getopt.git", {branch, "master"}}},
   {lager,
    ".*", {git, "git://github.com/basho/lager.git", {branch, "master"}}},
   {mochiweb,
    ".*", {git, "git://github.com/mochi/mochiweb.git", {branch, "master"}}}
  ]}.



